@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-2">Welcome to the Recipe Website</h1>
    <h5 class="display-4">You can explore the limitless world of this recipe website. Do you want to start?</h5>
    <br />
    <a class="btn btn-primary" asp-page="/Identity/Account/Register">Register</a>
    <a class="btn btn-primary" asp-page="/Identity/Account/Login">Login</a>
    <a class="btn btn-primary" asp-page="/Privacy">Privacy</a>
</div>

<style>
    a {
        text-decoration: none;
        color: #3498db;
        transition: color 0.3s ease;
    }

        a:hover {
            color: #555;
        }

    .text-center h1,
    .text-center h5 {
        color: #333;
    }

    .text-center h1 {
        font-size: 64px;
        margin-bottom: 20px;
    }

    .text-center h5 {
        font-size: 36px;
        margin-bottom: 15px;
    }

    .text-center .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        font-size: 24px;
        padding: 16px 32px;
        color: #fff;
    }

        .text-center .btn-primary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
            color: #fff;
        }
</style>
