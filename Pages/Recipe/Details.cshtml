@page
@model RecipeApp.Pages.Recipe.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Recipe</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.Image)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Recipe.Image != null && Model.Recipe.Image.Length > 0)
            {
                string imageBase64 = Convert.ToBase64String(Model.Recipe.Image);
                string imageSrc = string.Format("data:image;base64,{0}", imageBase64);
                <img src="@imageSrc" alt="Recipe Image" style="max-width: 50%;" />
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.Cuisine)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.Cuisine)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.DifficultyLevel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.DifficultyLevel)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.PreparationTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.PreparationTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.CookingTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.CookingTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.Servings)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.Servings)
        </dd>
@*        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Recipe.UserId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Recipe.UserId)
        </dd>*@
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Recipe?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>

