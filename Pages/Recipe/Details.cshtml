        transition: all 0.3s ease;
    }

    .btn-primary {
        background-color: #3498db;
        border-color: #3498db;
        color: #fff;
    }

        .btn-primary:hover {
            background-color: #007bff;
            border-color: #007bff;
        }

    a {
        text-decoration: none;
        color: #3498db;
        transition: color 0.3s ease;
    }

        a:hover {
            color: #555;
        }

    .row {
        margin-bottom: 20px;
    }

    .col-sm-2 {
        font-size: 14px;
        color: #333;
        font-weight: bold;
    }

